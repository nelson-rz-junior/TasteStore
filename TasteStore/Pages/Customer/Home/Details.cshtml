@page
@model DetailsModel
@{
    ViewData["Title"] = "Details";
}

<form method="post">
    <input type="hidden" asp-for="ShoppingCart.MenuItemId" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.ShoppingCart.MenuItem.Name</h1>
                </div>
                <div class="col-12 col-md-6 text-md-right">
                    <h1 class="text-muted">@Model.ShoppingCart.MenuItem.Price.ToString("c")</h1>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-8">
                            <div class="row">
                                <div class="col-12">
                                    <span class="badge text-white h3" style="border-radius:2px; background-color: @Model.ShoppingCart.MenuItem.Category.BackgroundColor;">@Model.ShoppingCart.MenuItem.Category.Name</span>
                                    <span class="badge text-white" style="border-radius:2px; background-color: @Model.ShoppingCart.MenuItem.FoodType.BackgroundColor;">@Model.ShoppingCart.MenuItem.FoodType.Name</span>
                                    <h3 class="text-success"></h3>

                                    <p class="text-secondary">@Html.Raw(@Model.ShoppingCart.MenuItem.Description)</p>

                                    <div class="row py-4">
                                        <div class="col-2">
                                            <label asp-for="ShoppingCart.Quantity" class="h3"></label>
                                        </div>
                                        <div class="col-2">
                                            <input asp-for="ShoppingCart.Quantity" class="form-control rounded" height="40px;" />
                                        </div>
                                        <div class="mt-3 col-6">
                                            <span asp-validation-for="ShoppingCart.Quantity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="/images/menuItems/@Model.ShoppingCart.MenuItem.Image" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1 ">
                        <a asp-page="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                    </div>
                    <div class="col-12 col-md-6 ">
                        <button type="submit" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}